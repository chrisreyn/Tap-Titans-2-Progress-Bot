// July 17, 2019
// -  Tap Titans 2 AdvancedClickBot by Tune389 [ v1.3 dev 1]
// edited by djo5296 '17-12-30
// now fully handled by chrisreyn
// thanks to tommy8208 for testing
// code and suggestions from atereshkov, GitGud2018
SCREEN_SIZE: 480x800

// ---------- Click Areas
var #enableFairies 1
var #enablePremiumCollect 1
var #agree 1
var #decline 0

var #enableTapping 1
// 1 = (default) hit the titans with your sword master
// 0 = disable hits (except on CQ)

var #enableCO 1
var #PHoM 1
var #astralAwakening 1
// #astralAwakening will be affected by #equipStack below

var #equipStack 0
// if set to 1, will skip some heroes when tapping for Astral Awakening
// ---------- Actions ---------- [ Prestige ]
var #enableAutoprestige 1

var #lateRun 0
// if 0, no change to run
// if #lateRun > 0, will resume run at #minutes = #lateRun
// 2nd run onwards (aka after prestige) will NOT adjust time

var #prestigeStartTime 45
// input minimum time in minutes before prestige
// prestige time range is ALWAYS +10 more minutes greater than StartTime to prevent teapot

var #dump 0
//dumps relics all into BoS
//only fully works if you set relic input to MAX
//be careful, after many many runs, arti list might be jumbled up
// ---------- Actions ---------- [ General ]
var #runActionsEveryXSeconds 94

var #runActionsOnStart 1
// 1 = (default) run actions on script start
// 0 = run actions after given run time above
// ---------- Actions ---------- [ Change Helm ]
var #changeHelmVARIABLE 4
//4 = on
//0 = off
var #gear1 1
var #gear2 3
var #timeChangeHelm 50
//be sure to have your desired equipemnts in the first 3 slots
//and that your helm list is scrolled to the top
//new equipemnt sometimes gets inserted at the top of the helm list, ruining expected equip
// ---------- Actions ---------- [ ClanQuest ]
var #enableClanQuest 0

var #head 1
var #torso 1
var #shoulders 1
var #hands 1
var #knees 1
// ---------- Actions ---------- [ Heroes ]
var #enableHeroes 1
var #heroIntensity 2
var #topHeroes 0
//level top hero every X seconds, leave at 0 to disable
var #skipScroll 1
//at (#prestigeAfterXMinutes - 3), stop scrolling down when hero upgrade
//also only when #prestigeAfterXMinutes >= #prestigeStartTime + 3
//useful for very late players
// ---------- Actions ---------- [ Skills ]
var #enableSkills 1
var #skipHS 0

var #fullManaSkill 6
// 1 = HS
// 2 = DS
// 3 = HoM
// 4 = FS
// 5 = WC
// 6 = SC

var #intervalHS 0
var #intervalDS 11
var #intervalFS 31
var #intervalHoM 11
var #intervalWC 11
var #intervalSC 6
//press given skills every X seconds

var #unlocked 0
// ^dont edit unless you know what it's for

if #lateRun > 0
	#intervalHS = 0
	#intervalDS = 11
	#intervalFS = 31
	#intervalHoM = 11
	#intervalWC = 11
	#intervalSC = 11
	if #lateRun > #maxSkillsAtXMinutes
		#unlocked = 8
	else
		#unlocked = 4
	endif
endif
//these will be the skill intervals when #lateRun > 0
//time dependent variable changes in :start will still apply, be sure to check :start section

var #justUnlockSkills 0
//just level each skill once
// 1 = (default) just unlock
// 0 = level skills much as possible
// will always max HS and SC whether 1 or 0
// see Tune389 Issue 80 if using #justUnlockSkills 1

var #maxSkillsAtXMinutes 34
var #stopLevelSkillMins 3
//only applicable when #justUnlockSkills == 1
// use 0 if you don't like


var #startSkillCheckNow 1
//run skill check after prestige (0) or now (1)
// ---------- Actions ---------- [ Boss ]
var #startBossSkill 6
//wait for given skill (2-6) then start boss

var #startBossSecondarySkill 2
//optional skill which will be clicked on start (not sure if working tbh)
// ---------- Developer / Expert
var #maxHitCount 9999999

var #showCurrentTime 1
//show current script runtime

var #timeScaleAddition 20
//if you wanna sync the script time with real time you can play around with this value
// ---------- Dec
var #detour 1
var #randomX 0
var #randomY 0
var #color1 0
var #color2 0
var #loopCount 0
var #pressLevelUpLoopCount 0
var #skillCheckStepper 0
var #actionStepper 0
var #levelHeroesStepper 0
var #skillActive 0
var #colorRed 0
var #colorBlue 0
var #colorGreen 0
var #loopDetectionCount 0
var #skillsUnlocked 0
var #tryWithDelay 0
var #checkRunning 0
var #recheckClanQuest 0
var #count 0
var #hitCount 0
var #skillAvailable 0
var #loopBreak 0
set #rAEXS #runActionsEveryXSeconds
set #iHS #intervalHS
set #iDS #intervalDS
set #iFS #intervalFS
set #iHoM #intervalHoM
set #iWC #intervalWC
set #iSC #intervalSC
var #maxedOutSkills 0
calc #minz #lateRun * 60000
var #prestigeAfterXMinutes 60
if #lateRun > 0
	#maxedOutSkills = 2
	#startSkillCheckNow = 0
endif
calc #prestigeEndTime #prestigeStartTime + 10
rand #prestigeAfterXMinutes #prestigeStartTime #prestigeEndTime
var #prestigeSlide 0
var #manualMax 0
var #hero 0
// ---------- Delays
var #btnDelay 150
var #hitDelay 40
var #hitDelay2 20
var #menuSlideDelay 200
var #menuPopUpDelay 500
var #loadingClanQuestDelay 3000
var #shipDelay 200
var #skillDelay 50
// ---------- Menu Coords
var #menuY 780
var #menuStats 15
var #menuHeroes 120
var #menuCloseY 455
var #menuCloseX 466
var #gearX 395
if #gear1 == 1
	set #gear1 590
elseif #gear1 == 2
	set #gear1 670
elseif #gear1 == 3
	set #gear1 750
endif
if #gear2 == 1
	set #gear2 590
elseif #gear2 == 2
	set #gear2 670
elseif #gear2 == 3
	set #gear2 750
endif
// ---------- Colors
var #colorWhite -65793
var #colorSkillActivated -20993
var #colorInfoNumber 475629
var #colorDia -7970303
var #colorLevelUpAvailable 1338350
var #skillGray 7829367
var #skillBlue -3693762
var #colorBlack 660003
var #colorStatsButton 3695603
var #colorGray 2695200
var #fightBoss 1077231
// ---------- TimeSets
var #timeLastActionRun 0
var #timeDiff 0
var #time 0
calc #time2 #prestigeAfterXMinutes - 3
var #seconds 0
var #secondsTotal 0
var #minutes 0
var #lastPressHS 0
var #lastPressDS 0
var #lastPressFS 0
var #lastPressHoM 0
var #lastPressSC 0
var #lastPressWC 0
var #lastTopHeroes 0
var #resultManaPool 0
var #resultCheckBoss 0
var #resultUpdateTime 0
var #resultClanQuest 0
// ---------- Clan Raids
var #clanBlueG -77
var #clanBlueB -57
var #deckSlotX 115
var #deckSlotY 335
var #deckSlotDiff 48
var #deckSlotCount 1
var #kneeL 155
var #kneeR 325
var #kneeY 570
var #armL 60
var #armR 420
var #shoulderY 290
var #handY 475
var #bodyX 240
var #headY 275
var #torsoY 425
var #raidHitCount 0
var #hitTotal 1055
// ---------- MAIN
:start
	#loopCount = #loopCount + 1
	#resultManaPool = #loopCount % 901
	#resultCheckBoss = #loopCount % 302
	#resultClanQuest = #loopCount % 101
	#resultUpdateTime = #loopCount % 75
	#timeDiff = #secondsTotal - #timeLastActionRun

	//add general execution delays
	#time = #time + #timeScaleAddition

	if #resultClanQuest == 0 and #enableClanQuest == 1
		goto :checkClanQuest
	endif

	if #resultUpdateTime == 0
		#seconds = (#time/1000)%60
		#secondsTotal = #time/1000
		#minutes = (#time/1000)/60

		if #enableSkills == 1
			if #minutes > 10
				//insert time dependent code changes
				//be sure to follow a similar format in :afterPrestige to revert back to original values
				#runActionsEveryXSeconds = 50
			endif
		endif
	endif

	if #showCurrentTime == 1 and #resultUpdateTime == 0
		toast #minutes:#seconds
	endif

	if #resultUpdateTime == 0 and #enablePremiumCollect == 1 and #agree == 1
		touchDown 0 350 630
		sleep 30
		touchUp 0
		sleep 30
		#time = #time + 60
	endif
goto :start2

:start2
	if #changeHelmVARIABLE == 4 and #showCurrentTime == 1 and #resultUpdateTime == 0
		toast will change helm at #timeChangeHelm minutes
	elseif #changeHelmVARIABLE == 2 and #showCurrentTime == 1 and #resultUpdateTime == 0
		toast done changing
	endif

	if #minutes >= #timeChangeHelm and #showCurrentTime == 1 and #resultUpdateTime == 0
		sleep 100
		toast checking minutes
		goto :helmSwitch1
	endif
goto :start3

:helmSwitch1
	if #changeHelmVARIABLE == 4
		sleep #btnDelay
		touchDown 0 200 780
		sleep #btnDelay
		touchUp 0
		sleep 20
		sleep 880

		getRGB #colorRed #colorGreen #colorBlue 330 480
		if #colorRed != 84 or #colorGreen != 76 or #colorBlue != 76
			if #loopBreak < 8
				#loopBreak = #loopBreak + 1
				sleep 300
				goto :helmSwitch1
			endif
		endif
		#loopBreak = 0

		//switch to helm tab
		touchPress 0 130 545
		sleep #btnDelay
		touchPress 0 130 545
		sleep #btnDelay
		touchPress 0 130 545
		sleep #btnDelay
		touchPress 0 130 545
		sleep #btnDelay
		goto :helmSwitch15
	endif
goto :start3

:helmSwitch15
	if #changeHelmVARIABLE == 4
		//equip secondary gear
		sleep 500
		touchPress 0 #gearX #gear2
		sleep #btnDelay
		touchPress 0 #gearX #gear2
		sleep #btnDelay
		touchPress 0 #gearX #gear2
		sleep #btnDelay
		touchPress 0 #gearX #gear2
		sleep #btnDelay

		//close
		touchPress 0 #menuCloseX #menuCloseY
		touchPress 0 #menuCloseX #menuCloseY
		touchPress 0 #menuCloseX #menuCloseY
		sleep #menuSlideDelay

		#changeHelmVARIABLE = 2
		toast done changing
		sleep #btnDelay
	endif
goto :start3

:start3
	if #resultUpdateTime == 0 and #enablePremiumCollect == 1 and #decline == 1
		touchDown 0 195 630
		sleep 30
		touchUp 0
		sleep 30
		#time = #time + 60
	endif
	if #resultUpdateTime == 0 and #timeDiff < #runActionsEveryXSeconds
		goto :pressSkills
	endif

	if #loopCount == 1 and #enableClanQuest == 1
		goto :checkClanQuest
	elseif #loopCount == 2
		goto :init
	elseif #minutes >= #prestigeAfterXMinutes and #enableAutoprestige == 1
		goto :checkPrestige
	elseif #timeDiff >= #runActionsEveryXSeconds
		goto :runActions
	elseif #resultCheckBoss == 0
		toast Prestiging at #prestigeAfterXMinutes minutes
		goto :checkBoss
	elseif #resultManaPool == 0
		goto :checkMana
	elseif #loopCount == #maxHitCount
		#loopCount = 0
		goto :randomTouch
	else
		goto :randomTouch
	endif
:end

:afterPrestige
	#detour = 1
	#count = 0
	#skillsUnlocked = 0
	#time = 0
	#seconds = 0
	#secondsTotal = 0
	#minutes = 0
	#unlocked = 0
	#lateRun = 0
	#runActionsEveryXSeconds = #rAEXS
	#maxedOutSkills = 0
	#prestigeSlide = 0
	#startSkillCheckNow = 1

	#intervalHS = #iHS
	#intervalDS = #iDS
	#intervalFS = #iFS
	#intervalHoM = #iHoM
	#intervalWC = #iWC
	#intervalSC = #iSC
	rand #prestigeAfterXMinutes #prestigeStartTime #prestigeEndTime
	#time2 = #prestigeAfterXMinutes - 3
goto :helmSwitch2

:helmSwitch2
	if #changeHelmVARIABLE == 2
		sleep 300
		//open equipment tab
		sleep #btnDelay
		touchDown 0 200 780
		sleep #btnDelay
		touchUp 0
		sleep 20
		//wait for menu open
		sleep #menuSlideDelay
		//check if opened right
		sleep #menuSlideDelay
		getRGB #colorRed #colorGreen #colorBlue 330 480
		if #colorRed != 84 or #colorGreen != 76 or #colorBlue != 76
			if #loopBreak < 4
				sleep 300
				#loopBreak = #loopBreak + 1
				goto :helmSwitch2
			endif
		endif
		#loopBreak = 0
		//open helm tab
		touchPress 0 130 545
		sleep #btnDelay
		touchPress 0 130 545
		sleep #btnDelay
		touchPress 0 130 545
		sleep #btnDelay
		touchPress 0 130 545
		sleep #btnDelay
		sleep 500
	endif
goto :helmSwitch25

:helmSwitch25
	if #changeHelmVARIABLE == 2
		//equip main gear
		touchPress 0 #gearX #gear1
		sleep #btnDelay
		touchPress 0 #gearX #gear1
		sleep #btnDelay
		touchPress 0 #gearX #gear1
		sleep #btnDelay
		touchPress 0 #gearX #gear1
		sleep #btnDelay
		//close equipment
		sleep #btnDelay
		touchPress 0 #menuCloseX #menuCloseY
		touchPress 0 #menuCloseX #menuCloseY
		touchPress 0 #menuCloseX #menuCloseY
		sleep #menuSlideDelay
		#changeHelmVARIABLE = 4
	endif
goto :dumpRelics

:dumpRelics
	if #dump == 1
		sleep 300
		//open relics tab
		sleep #btnDelay
		touchDown 0 360 #menuY
		sleep #btnDelay
		touchUp 0
		sleep 20

		//wait for menu open
		sleep #menuSlideDelay

		//check if opened right
		sleep #menuSlideDelay
		getRGB #colorRed #colorGreen #colorBlue 330 480
		if #colorRed != 84 or #colorGreen != 76 or #colorBlue != 76
			if #loopBreak < 4
				#loopBreak = #loopBreak + 1
				sleep 300
				goto :dumpRelics
			endif
		endif
		#loopBreak = 0

		//tap BoS
		touchPress 0 410 650
		sleep #btnDelay
		touchPress 0 410 650
		sleep #btnDelay
		touchPress 0 410 650
		sleep #btnDelay
		touchPress 0 410 650
		sleep #btnDelay

		//close menu
		sleep #btnDelay
		touchPress 0 #menuCloseX #menuCloseY
		touchPress 0 #menuCloseX #menuCloseY
		touchPress 0 #menuCloseX #menuCloseY
		sleep #menuSlideDelay
	endif

goto :init
// ---------- INIT
:init
	if #enablePremiumCollect == 1
		if #agree == 1
			touchDown 0 350 630
			sleep 50
			touchUp 0
			sleep 50
			#time = #time + 100
		endif
		if #decline == 1
			touchDown 0 195 630
			sleep 50
			touchUp 0
			sleep 50
			#time = #time + 100
		endif
	endif

	#lastPressHS = 0
	#lastPressDS = 0
	#lastPressFS = 0
	#lastPressHoM = 0
	#lastPressSC = 0
	#lastPressWC = 0
	#timeLastActionRun = 0

	touchDown 0 #menuCloseX #menuCloseY
	sleep #btnDelay
	#time = #time + #btnDelay
	touchUp 0
	sleep #menuSlideDelay
	#time = #time + #menuSlideDelay

	if #runActionsOnStart == 1
		#actionStepper = 0
		goto :runActions
	endif
goto :start

:loopDetected
	toast loop detected - repeating ...
	#loopCount = 0
	#loopDetectionCount = 0
goto :start
// ---------- PRESS SKILLS
:pressSkills
	//click "Fight Boss"
	getColor #color1 372 24
	if #color1 == #fightBoss and #loopBreak < 5
		toast FightBoss1
		touchPress 0 390 36
		sleep 40
		touchUp
		sleep 40
		#loopBreak = #loopBreak + 1
		#time = #time + 80
		goto :pressSkills
	endif

	#loopBreak = 0

	touchDown 0 #menuCloseX #menuCloseY
	sleep 40
	touchUp 0
	sleep #menuSlideDelay
	#time = #time + #menuSlideDelay + 40

	if #enableCO == 1
		touchPress 0 175 410
		sleep #shipDelay
		touchPress 0 175 410
		sleep #shipDelay
		touchPress 0 175 410
		sleep #shipDelay
		touchPress 0 175 410
		sleep #shipDelay
		#time = #time + 4 * #shipDelay
	endif

	#timeDiff = #secondsTotal - #lastPressSC
	if #timeDiff >= #intervalSC and #intervalSC > 0
		#lastPressSC = #secondsTotal
		touchPress 0 430 710
		sleep #skillDelay
		touchPress 0 430 710
		sleep #skillDelay
		#time = #time + #skillDelay * 2
	endif

	#timeDiff = #secondsTotal - #lastPressHoM
	if #timeDiff >= #intervalHoM and #intervalHoM > 0
		#lastPressHoM = #secondsTotal
		touchPress 0 200 710
		sleep #skillDelay
		touchPress 0 200 710
		sleep #skillDelay
		#time = #time + #skillDelay * 2
	endif
goto :pressSkillsB

:pressSkillsB
	#timeDiff = #secondsTotal - #lastPressDS
	if #timeDiff >= #intervalDS and #intervalDS > 0
		#lastPressDS = #secondsTotal
		touchPress 0 120 710
		sleep #skillDelay
		touchPress 0 120 710
		sleep #skillDelay
		#time = #time + #skillDelay * 2
	endif
	#timeDiff = #secondsTotal - #lastPressWC
	if #timeDiff >= #intervalWC and #intervalWC > 0
		#lastPressWC = #secondsTotal
		touchPress 0 360 710
		sleep #skillDelay
		touchPress 0 360 710
		sleep #skillDelay
		#time = #time + #skillDelay * 2
	endif
goto :pressSkillsC

:pressSkillsC
	#timeDiff = #secondsTotal - #lastPressFS
	if #timeDiff >= #intervalFS and #intervalFS > 0
		#lastPressFS = #secondsTotal
		touchPress 0 280 710
		sleep #skillDelay
		touchPress 0 280 710
		sleep #skillDelay
		#time = #time + #skillDelay * 2
	endif
	#timeDiff = #secondsTotal - #lastPressHS
	if #timeDiff >= #intervalHS and #intervalHS != 0
		#lastPressHS = #secondsTotal
		touchPress 0 40 710
		sleep #skillDelay
		touchPress 0 40 710
		sleep #skillDelay
		#time = #time + #skillDelay * 2
	endif

	if #detour == 1
		#detour = 0
		sleep 1200
		goto :levelHeroes2
	endif
goto :pressSkillsD

:pressSkillsD
	if #topHeroes > 0
	#timeDiff = #secondsTotal - #lastTopHeroes
		if #timeDiff >= #topHeroes
			#lastTopHeroes = #secondsTotal
			sleep 100
			//open stats
			sleep #btnDelay
			#time = #time + #btnDelay + 100
			touchDown 0 #menuHeroes #menuY
			sleep #btnDelay
			touchUp 0
			sleep 1000
			#time = #time + 1000 + #btnDelay
			//wait for slide
			sleep #menuSlideDelay
			#time = #time + #menuSlideDelay
			//slide top
			touchDown 0 280 650
			sleep 200
			touchMove 0 280 600
			sleep 50
			touchMove 0 280 700
			sleep 50
			touchMove 0 280 750
			sleep 50
			touchMove 0 280 780
			sleep 50
			touchUp 0
			sleep 750
			sleep #btnDelay
			#time = #time + #btnDelay + 1150
			//level top heroes
			touchPress 0 410 580
			sleep #btnDelay
			touchPress 0 410 650
			sleep #btnDelay
			touchPress 0 410 730
			sleep #btnDelay
			#time = #time + #btnDelay * 3
			//close stats
			sleep #btnDelay
			#time = #time + #btnDelay
			touchPress 0 #menuCloseX #menuCloseY
			touchPress 0 #menuCloseX #menuCloseY
			touchPress 0 #menuCloseX #menuCloseY
			sleep #menuSlideDelay
			#time = #time + #menuSlideDelay
		endif
	endif
goto :start
// ---------- CHECK MANA
:checkMana
	getColor #color1 208 638
	if #color1 == #colorWhite
		goto :startSkill
	endif
goto :start

:startSkill
	if #fullManaSkill == 1
		touchPress 0 40 710
	elseif #fullManaSkill == 2
		touchPress 0 120 710
	elseif #fullManaSkill == 3
		touchPress 0 200 710
	elseif #fullManaSkill == 4
		touchPress 0 280 710
	elseif #fullManaSkill == 5
		touchPress 0 360 710
	elseif #fullManaSkill == 6
		touchPress 0 430 710
	endif
	#time = #time + 150
goto :start

:runActions
	#timeLastActionRun = #secondsTotal
	#actionStepper = #actionStepper + 1

	//since skills should have been maxed, it wont go to openSwordMasterTab after
	if #unlocked >= 8 or #maxedOutSkills > 1 and #actionStepper == 1
		#actionStepper = #actionStepper + 1
	endif

	if #justUnlockSkills == 0 and #minutes >= #stopLevelSkillMins and #actionStepper == 1
		#actionStepper = #actionStepper + 1
	endif

	if #actionStepper == 1 and #enableSkills == 1 and #skillsUnlocked < 6
		#skillsUnlocked = 0
		goto :openSwordMasterTab
	elseif #actionStepper == 2 and #enableHeroes == 1
		goto :levelHeroes
	elseif #actionStepper == 5 and #enableClanQuest == 1
		#actionStepper = 0
		goto :checkClanQuest
	else
		#actionStepper = 0
		goto :checkBoss
	endif
goto :runActions

// ---------- CHECK PRESTIGE
:checkPrestige
	sleep 4000

	if #agree == 1
		touchDown 0 350 630
		sleep 30
		touchUp 0
		sleep 30
		touchDown 0 350 630
		sleep 30
		touchUp 0
		sleep 30
		touchDown 0 350 630
		sleep 30
		touchUp 0
		sleep 30
	endif

	if #decline == 1
		touchDown 0 200 630
		sleep 50
		touchUp 0
		sleep 50
		touchDown 0 200 630
		sleep 50
		touchUp 0
		sleep 50
		touchDown 0 200 630
		sleep 30
		touchUp 0
		sleep 30
	endif

	sleep 100
	//open stats
	sleep #btnDelay
	touchDown 0 #menuStats #menuY
	sleep #btnDelay
	touchUp 0
	sleep 30

	//wait for slide
	sleep #menuSlideDelay

	//slide top
	touchDown 0 280 650
	sleep 200
	touchMove 0 280 600
	sleep 50
	touchMove 0 280 700
	sleep 50
	touchMove 0 280 750
	sleep 50
	touchMove 0 280 780
	sleep 50
	touchUp 0
	sleep 800
	sleep #btnDelay
	touchDown 0 280 650
	sleep 200
	touchMove 0 280 600
	sleep 50
	touchMove 0 280 700
	sleep 50
	touchMove 0 280 750
	sleep 50
	touchMove 0 280 780
	sleep 50
	touchUp 0
	sleep 800
	sleep #btnDelay
	touchDown 0 280 650
	sleep 200
	touchMove 0 280 600
	sleep 50
	touchMove 0 280 700
	sleep 50
	touchMove 0 280 750
	sleep 50
	touchMove 0 280 780
	sleep 50
	touchUp 0
	sleep 800
	sleep #btnDelay

	//lvl up
	sleep #btnDelay
	sleep 50
	touchDown 0 466 580
	sleep 50
	touchUp 0
	sleep 200
	touchDown 0 466 580
	sleep 50
	touchUp 0
	sleep 200
	touchDown 0 466 580
	sleep 50
	touchUp 0
	sleep 200

	sleep 400
goto :checkPrestigeB

:checkPrestigeB
	if #prestigeSlide < 7
		//slide down
		touchDown 1 280 740
		sleep 200
		touchMove 1 280 710
		sleep 50
		touchMove 1 280 500
		sleep 50
		touchMove 1 280 410
		sleep 50
		touchMove 1 280 400
		sleep 50
		touchUp 1
		sleep 300
		#prestigeSlide = #prestigeSlide + 1
		goto :checkPrestigeB
	endif

	#loopBreak = #loopBreak + 1
	if #loopBreak > 11
		#loopBreak = 0
		#prestigeSlide = 0

		//close stats
		sleep #btnDelay
		touchPress 0 #menuCloseX #menuCloseY
		touchPress 0 #menuCloseX #menuCloseY
		touchPress 0 #menuCloseX #menuCloseY
		sleep #menuSlideDelay

		goto :checkPrestige
	endif

	touchDown 0 400 720
	sleep 30
	touchUp 0
	sleep 30
	sleep #menuPopUpDelay

	touchDown 0 240 640
	sleep #btnDelay
	touchUp 0
	sleep #menuPopUpDelay
	sleep 120
	getColor #color1 430 540
	if #color1 == 6384245
		touchDown 0 330 535
		sleep #btnDelay
		touchUp 0
		sleep 25000
		goto :afterPrestige
	else
		touchPress 470 450
		touchPress 470 450
		touchPress 470 450
		touchPress 470 450
		#prestigeSlide = 0
		goto :checkPrestige
	endif
goto :start

// ---------- CHECK CLAN QUEST
:checkClanQuest
	sleep 300

	//check CQ up
	getRGB #colorRed #colorGreen #colorBlue 72 21
	//check foreground no windows open
	getColor #color1 65 795

	if #colorRed < 190 and #colorRed > 120 and #color1 == #colorStatsButton
		#recheckClanQuest = 1
		goto :checkClanQuestReady
	endif
goto :start

:checkClanQuestReady
	if #agree == 1
		sleep 3500
		touchDown 0 300 630
		sleep 50
		touchUp 0
		sleep 50
		touchDown 0 300 630
		sleep 50
		touchUp 0
		sleep 50
		touchDown 0 300 630
		sleep 50
		touchUp 0
		sleep 1100
	endif

	if #decline == 1
		sleep 3500
		touchDown 0 200 630
		sleep 50
		touchUp 0
		sleep 50
		touchDown 0 200 630
		sleep 50
		touchUp 0
		sleep 50
		touchDown 0 200 630
		sleep 50
		touchUp 0
		sleep 1100
	endif

	//open CQ menu
	sleep #btnDelay
	touchDown 0 80 25
	sleep #btnDelay
	touchUp 0
	sleep #btnDelay
	sleep 1500

	//touch clan icon bottom
	touchDown 0 110 720
	sleep #btnDelay
	touchUp 0
	sleep #loadingClanQuestDelay
	sleep 3000
goto :checkClanQuestReady2

:checkClanQuestReady2
	//check for Blue fight button lower right
	getRGB #colorRed #colorGreen #colorBlue 390 715
	//420 725
	//420 730

	//if #color1 == -1785765
	if #colorGreen != #clanBlueG or #colorBlue != #clanBlueB
		#recheckClanQuest = 0
		goto :clanQuestClose
	endif

	//check boss HP > 0
	getRGB #colorRed #colorGreen #colorBlue 116 145
	if #colorGreen == #clanBlueG and #colorBlue == #clanBlueB
		//boss up
		touchDown 0 390 715
		sleep #btnDelay
		touchUp 0
		sleep #menuPopUpDelay
		sleep #menuPopUpDelay
		goto :clanQuestCheckDecks
	endif

	//boss down
	#recheckClanQuest = 0
goto :clanQuestClose

:clanQuestCheckDecks
	//on first run, tap on deck 1
	//other runs, adjusted to hit appropriate deck slot
	touchPress 0 #deckSlotX #deckSlotY
	sleep #btnDelay
	touchPress 0 #deckSlotX #deckSlotY
	sleep #btnDelay
	touchPress 0 #deckSlotX #deckSlotY
	sleep #btnDelay
	touchPress 0 #deckSlotX #deckSlotY
	sleep #btnDelay
	sleep #btnDelay

	//initiate hit
	touchPress 0 360 530
	sleep #btnDelay
	touchPress 0 360 530
	sleep #btnDelay
	touchPress 0 360 530
	sleep #btnDelay
	touchPress 0 360 530
	sleep #btnDelay

	//wait to load titan screen
	sleep 2400
goto :clanQuestHit

:clanQuestHit
	if #knees == 1
		touchDown 0 #kneeL #kneeY
		touchUp 0
		sleep 28
		#raidHitCount = #raidHitCount + 1
		touchDown 0 #kneeR #kneeY
		touchUp 0
		sleep 28
		#raidHitCount = #raidHitCount + 1
	endif

	if #shoulders == 1
		touchDown 0 #armL #shoulderY
		touchUp 0
		sleep 28
		#raidHitCount = #raidHitCount + 1
		touchDown 0 #armR #shoulderY
		touchUp 0
		sleep 28
		#raidHitCount = #raidHitCount + 1
	endif

	if #hands == 1
		touchDown 0 #armL #handY
		touchUp 0
		sleep 28
		#raidHitCount = #raidHitCount + 1
		touchDown 0 #armR #handY
		touchUp 0
		sleep 28
		#raidHitCount = #raidHitCount + 1
	endif

	if #head == 1
		touchDown 0 #bodyX #headY
		touchUp 0
		sleep 28
		#raidHitCount = #raidHitCount + 1
	endif

	if #torso == 1
		touchDown 0 #bodyX #torsoY
		touchUp 0
		sleep 28
		#raidHitCount = #raidHitCount + 1
	endif

	if #raidHitCount < #hitTotal
		goto :clanQuestHit
	endif
goto :clanQuestHitExit

:clanQuestHitExit
	//if Continue is not yet present, continue hitting
	//possibly due to titan death + transition to new titan
	toast checking for Continue
	getRGB #colorRed #colorGreen #colorBlue 300 615
	if #colorRed != -216 or #colorGreen != -94  or #colorBlue != -53
		//estimated value, additional 3 seconds
		//unsure of actual titan transition time, please correct me
		#raidHitCount = 0
		#hitTotal = 103
		goto :clanQuestHit
	endif
	#raidHitCount = 0
	#hitTotal = 1055
	#deckSlotX = #deckSlotX + #deckSlotDiff * #deckSlotCount
	#deckSlotCount = #deckSlotCount + 1

	sleep #btnDelay
	touchDown 0 300 615
	sleep #btnDelay
	touchUp 0
	sleep #btnDelay
	touchDown 0 300 615
	sleep #btnDelay
	touchUp 0
	sleep #btnDelay
	touchDown 0 300 615
	sleep #btnDelay
	touchUp 0

	sleep 10000
	toast please wait
	sleep 10000
	toast a bit more
	sleep 5000
	toast almost there
	sleep 5000

	if #deckSlotCount > 3
		#deckSlotX = 115
		#deckSlotCount = 1
		#recheckClanQuest = 0
		goto :clanQuestClose
	endif
goto :checkClanQuestReady2

:clanQuestClose
	//is it closed already?
	getColor #color1 65 788
	if #color1 == #colorStatsButton
		//yes
		goto :clanQuestCloseCheck
	else
		//no
		touchDown 0 410 65
		sleep 35
		touchUp 0
		sleep 200
		touchDown 0 405 65
		sleep 35
		touchUp 0
		sleep 200
		goto :clanQuestClose
	endif

:clanQuestCloseCheck
	if #recheckClanQuest == 1
		goto :checkClanQuestReady
	else
		#deckSlotCount = 1
		goto :start
	endif

// ---------- LEVEL SKILLS
:openSwordMasterTab
	if #count < 2
		if #lateRun < 1 and #count < 2
			if #count == 0
				sleep 300
				//open sword master tab
				sleep #btnDelay

				touchDown 0 #menuStats #menuY
				sleep #btnDelay

				touchUp 0
				sleep 20

				//wait for menu open
				sleep #menuSlideDelay


				//check if opened right
				sleep #menuSlideDelay
				getRGB #colorRed #colorGreen #colorBlue 330 480
				if #colorRed != 84 or #colorGreen != 76 or #colorBlue != 76
					if #loopBreak < 4
						#loopBreak = #loopBreak + 1
						sleep 300
						goto :openSwordMasterTab
					endif
				endif
				#time = #time + #btnDelay + 100
				#time = #time + #btnDelay
				#time = #time + #menuSlideDelay
				#loopBreak = 0
			endif

			//slide top
			touchDown 0 280 650
			sleep 200
			touchMove 0 280 600
			sleep 50
			touchMove 0 280 700
			sleep 50
			touchMove 0 280 750
			sleep 50
			touchMove 0 280 780
			sleep 50
			touchUp 0
			sleep 750

			//slide top
			touchDown 0 280 650
			sleep 200
			touchMove 0 280 600
			sleep 50
			touchMove 0 280 700
			sleep 50
			touchMove 0 280 750
			sleep 50
			touchMove 0 280 780
			sleep 50
			touchUp 0
			sleep 750

			//slide top
			touchDown 0 280 650
			sleep 200
			touchMove 0 280 600
			sleep 50
			touchMove 0 280 700
			sleep 50
			touchMove 0 280 750
			sleep 50
			touchMove 0 280 780
			sleep 50
			touchUp 0
			sleep 750
			sleep #btnDelay
			#time = #time + #btnDelay + 3450

			touchDown 0 466 580
			sleep 50
			touchUp 0
			sleep 200
			touchDown 0 466 580
			sleep 50
			touchUp 0
			sleep 200
			touchDown 0 466 580
			sleep 50
			touchUp 0
			sleep 200
			#time = #time + 750
		endif

		if #lateRun > 0 and #count < 1
			#time = #time + #minz
			#seconds = (#time/1000)%60
			#secondsTotal = #time/1000
			#minutes = (#time/1000)/60
			#lateRun = 0
		endif

		if #count < 2
			#count = #count + 1
		endif

		if #count < 2
			goto :openSwordMasterTab
		endif
	endif

	//slide top
	touchDown 0 280 650
	sleep 200
	touchMove 0 280 600
	sleep 50
	touchMove 0 280 700
	sleep 50
	touchMove 0 280 750
	sleep 50
	touchMove 0 280 780
	touchUp 0
	sleep 600
	#time = #time + 950

	if #enableSkills == 1 or #enableHeroes == 1
		goto :checkSkills
	endif

goto :closeMenu

:checkSkills
	if #startSkillCheckNow == 0
		goto :checkSkillsFinish
	endif

	if #skillsUnlocked == 6 and #justUnlockSkills == 1
		toast skills unlocked, stop now until next prestige
		goto :checkSkillsFinish
	endif

	#skillCheckStepper = #skillCheckStepper + 1

	if #skillCheckStepper == 1
		if #maxedOutSkills > 0 or #skipHS == 1
			#skillCheckStepper = #skillCheckStepper + 1
		endif
	endif
goto :checkSkillsB

:checkSkillsB
	#manualMax = #manualMax + 1

	if #skillCheckStepper > 1 and #maxedOutSkills < 1 and #justUnlockSkills == 0
		touchPress 0 415 750
		sleep 34
		touchPress 0 415 750
		touchPress 0 415 750
		touchPress 0 415 750
		sleep 45
		touchPress 0 415 750
		sleep 38
		#time = #time + 115
	endif

	if #manualMax < 12
		goto :checkSkillsB
	else
		#manualMax = 0
		goto :checkSkillsC
	endif

:checkSkillsC
	if #skillCheckStepper == 1
		touchPress 0 405 680
		sleep 34
		touchPress 0 405 680
		touchPress 0 405 680
		touchPress 0 405 680
		sleep 45
		touchPress 0 405 680
		sleep 38
		#time = #time + 115
		goto :maxHS
	elseif #skillCheckStepper == 6
		goto :maxSkill
	elseif #skillCheckStepper < 6
		goto :checkSkillsUnlock
	endif

	//slide back
	touchDown 1 280 650
	sleep 200
	touchMove 1 280 600
	sleep 50
	touchMove 1 280 700
	sleep 50
	touchMove 1 280 750
	sleep 50
	touchMove 1 280 780
	touchUp 1
	#time = #time + 350
goto :checkSkillsFinish

:lvlSkill
	if #minutes >= #maxSkillsAtXMinutes and #maxSkillsAtXMinutes > 0 and #unlocked < 8 and #skillCheckStepper <= 5
		touchPress 0 459 755
		sleep 300
		#time = #time + 300
		#unlocked = #unlocked + 1
	endif

	#time = #time + 100
	getRGB #colorRed #colorGreen #colorBlue 459 755
	if #colorBlue <= -45
		sleep 10
		#time = #time + 10
		goto :endLvlSkill

	elseif #justUnlockSkills == 0
		goto :maxSkill

	elseif #justUnlockSkills == 1
		if #skillCheckStepper < 6
			if #unlocked < 4
				#unlocked = #unlocked + 1
				touchPress 0 459 755
				sleep #btnDelay
				#time = #time + #btnDelay
				goto :endLvlSkill
			elseif #unlocked >= 4
				if #minutes < #maxSkillsAtXMinutes
					goto :endLvlSkill
				else
					if #unlocked < 8
						touchPress 0 459 755
						sleep #btnDelay
						#time = #time + #btnDelay
					endif
					goto :maxSkill
				endif
			endif
		endif
	endif
goto :endLvlSkill

:endLvlSkill
	if #skillCheckStepper == 6 and #maxedOutSkills == 0
		#maxedOutSkills = #maxedOutSkills + 1
		//slide
		touchDown 1 280 750
		sleep 200
		touchMove 1 280 730
		sleep 50
		touchMove 1 280 660
		sleep 50
		touchMove 1 280 655
		sleep 50
		touchMove 1 280 649
		sleep 200
		touchUp 1
		sleep 200
		#time = #time + 750
		goto :maxSkill
	elseif #skillCheckStepper == 6
		goto :checkSkills
	else
		goto :checkSkillsSlideDown
	endif

:maxHS
	#loopBreak = #loopBreak + 1
	if #loopBreak > 10
		#loopBreak = 0
		//slide back
		touchDown 1 280 650
		sleep 200
		touchMove 1 280 600
		sleep 50
		touchMove 1 280 700
		sleep 50
		touchMove 1 280 750
		sleep 50
		touchMove 1 280 780
		touchUp 1
		//slide back
		touchDown 1 280 650
		sleep 200
		touchMove 1 280 600
		sleep 50
		touchMove 1 280 700
		sleep 50
		touchMove 1 280 750
		sleep 50
		touchMove 1 280 780
		touchUp 1
		#time = #time + 350 * 2
		goto :checkSkills
	endif

	touchPress 0 405 680
	sleep 34
	touchPress 0 405 680
	touchPress 0 405 680
	touchPress 0 405 680
	sleep 45
	touchPress 0 405 680
	sleep 38
	#time = #time + 115
goto :maxHS

:maxSkill
	sleep 70
	#time = #time + 70

	#loopBreak = #loopBreak + 1
	if #loopBreak > 15
		#loopBreak = 0
		goto :endLvlSkill
	endif

	getRGB #colorRed #colorGreen #colorBlue 459 755

	sleep 50
	#time = #time + 50

	if #colorRed < -100 or #colorGreen < -100 or #colorBlue <= -40
		#loopBreak = 0
		goto :endLvlSkill
	endif

	touchPress 0 415 750
	sleep 34
	touchPress 0 415 750
	touchPress 0 415 750
	touchPress 0 415 750
	sleep 45
	touchPress 0 415 750
	sleep 38
	#time = #time + 115
goto :maxSkill

:checkSkillsUnlock
	sleep 200
	#time = #time + 200

	getRGB #colorRed #colorGreen #colorBlue 450 660

	if #colorBlue == 2 or #colorBlue == 5
		#skillsUnlocked = #skillsUnlocked + 1
	endif

	if #colorBlue == 2
		sleep 100
		touchDown 0 466 660
		sleep 300
		touchUp 0
		sleep 200
		#time = #time + 600
	endif

	if #justUnlockSkills == 0
		getColor #skillAvailable 466 660
		if #skillAvailable == #skillBlue
			goto :checkSkillsSlideDown
		else
			goto :lvlSkill
		endif
	endif

	if #skillCheckStepper == 6
		goto :checkSkills
	endif
goto :checkSkillsSlideDown

:checkSkillsSlideDown
	//slide
	toast slide down
	touchDown 1 280 750
	sleep 200
	touchMove 1 280 725
	sleep 50
	touchMove 1 280 660
	sleep 50
	touchMove 1 280 655
	sleep 50
	touchMove 1 280 649
	sleep 200
	touchUp 1
	sleep 200
	#time = #time + 750
goto :checkSkills

:checkSkillsFinish
	#skillCheckStepper = 0
	#maxedOutSkills = #maxedOutSkills + 1

	if #enableHeroes == 1
		goto :runActions
	endif
goto :closeMenu
// ---------- LEVEL HEROES
:levelHeroes

	//collect gold
	touchDown 0 30 230
	sleep 50
	touchUp 0
	sleep 50
	#time = #time + 100

	if #agree == 1
		sleep 2000
		touchDown 0 350 630
		sleep 30
		touchUp 0
		sleep 30
		touchDown 0 350 630
		sleep 30
		touchUp 0
		sleep 30
		touchDown 0 350 630
		sleep 30
		touchUp 0
		sleep 30
		#time = #time + 2180
	endif

	if #decline == 1
		sleep 2000
		touchDown 0 200 630
		sleep 30
		touchUp 0
		sleep 30
		touchDown 0 200 630
		sleep 30
		touchUp 0
		sleep 30
		#time = #time + 2120
	endif

	if #minutes < 1
		goto :closeMenu
	endif
goto :levelHeroes2

:levelHeroes2
	//open menu
	sleep #btnDelay
	sleep #btnDelay

	touchDown 0 #menuHeroes #menuY
	sleep #btnDelay

	touchUp 0
	sleep 1100


	if #tryWithDelay == 1
		sleep 3000
	endif

	//check if opened right
	sleep 600
	getRGB #colorRed #colorGreen #colorBlue 330 480
	if #colorRed != 84 or #colorGreen != 76 or #colorBlue != 76
		if #loopBreak < 4
			sleep 300
			#loopBreak = #loopBreak + 1
			goto :levelHeroes2
		endif
	endif
	#time = #time + #btnDelay + #btnDelay + 1100 + #menuSlideDelay
	#loopBreak = 0
	#loopDetectionCount = #loopDetectionCount + 1
	if #loopDetectionCount > 3
		#loopDetectionCount = 0
		toast levelHeroes loop
		goto :scrollTop
	endif

	//scroll up
	touchDown 0 280 650
	sleep 200
	touchMove 0 280 600
	sleep 50
	touchMove 0 280 700
	sleep 50
	touchMove 0 280 750
	sleep 50
	touchMove 0 280 780
	touchUp 0
	sleep 200

	touchDown 0 280 650
	sleep 200
	touchMove 0 280 600
	sleep 50
	touchMove 0 280 700
	sleep 50
	touchMove 0 280 750
	sleep 50
	touchMove 0 280 780
	touchUp 0
	sleep 200
	#time = #time + 2 * 550

	#tryWithDelay = 0

	goto :scrollTop

	#tryWithDelay = 1
goto :levelHeroes2

:scrollTop
	#loopDetectionCount = #loopDetectionCount + 1
	if #loopDetectionCount > 20
		#loopDetectionCount = 0
		toast scrollTop loop
		goto :lvlTopHero
	endif

	sleep 90
	#time = #time + 90

	getColor #color1 275 527
	getColor #color2 275 519
	#time = #time + 110
	if #color1 == #colorGray and #color2 == #colorGray
		#loopDetectionCount = 0
		sleep 400
		#time = #time + 400

		touchDown 0 280 650
		sleep 200
		touchMove 0 280 600
		sleep 50
		touchMove 0 280 700
		sleep 50
		touchMove 0 280 750
		sleep 50
		touchMove 0 280 780
		touchUp 0
		sleep 600
		#time = #time + 950

		goto :lvlTopHero
	endif

	touchDown 0 280 650
	sleep 200
	touchMove 0 280 600
	sleep 50
	touchMove 0 280 700
	sleep 50
	touchMove 0 280 750
	sleep 50
	touchMove 0 280 780
	touchUp 0
	sleep 200

	touchDown 0 280 650
	sleep 200
	touchMove 0 280 600
	sleep 50
	touchMove 0 280 700
	sleep 50
	touchMove 0 280 750
	sleep 50
	touchMove 0 280 780
	touchUp 0
	sleep 200
	#time = #time + 2 * 550
goto :scrollTop

:lvlTopHero
	touchPress 0 466 570
	sleep #btnDelay
	touchPress 0 466 570
	sleep #btnDelay
	touchPress 0 466 570
	sleep #btnDelay
	touchPress 0 460 670
	sleep #btnDelay
	touchPress 0 460 670
	sleep #btnDelay
	touchPress 0 460 670
	sleep #btnDelay
	touchPress 0 460 670
	sleep #btnDelay
	#time = #time + #btnDelay * 7

	if #skipScroll == 1 and #minutes >= #time2 and #time2 >= #prestigeStartTime
		goto :levelHeroesPressLevelUp
	endif

	//lvl up only nearby heroes at this time onwards
	//edit as you see fit
	if #minutes >= 4 or #lateRun > 0
		//slide down
		touchDown 1 280 740
		sleep 200
		touchMove 1 280 710
		sleep 50
		touchMove 1 280 500
		sleep 50
		touchMove 1 280 410
		sleep 50
		touchMove 1 280 400
		touchUp 1

		sleep 300
		#time = #time + 650

		goto :levelHeroesPressLevelUp
	endif

goto :levelHeroesScrollDown

