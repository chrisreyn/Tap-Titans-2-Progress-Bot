// -  Tap Titans 2 -
// Clan Raid
// by chrisreyn

// ---------- Body Part Selection
var #head 1
var #torso 1
var #shoulders 1
var #hands 1
var #knees 1

// ---------- Variables (do not touch)
var #kneeL 155
var #kneeR 325
var #kneeY 570

var #armL 60
var #armR 420
var #shoulderY 290
var #handY 475

var #bodyX 240
var #headY 275
var #torsoY 425

var #hitCount 0
var #hitTotal 1053
// ---------- MAIN
:start
if #knees == 1
	touchDown 0 #kneeL #kneeY
	touchUp 0
	sleep 28
	#hitCount = #hitCount + 1
	touchDown 0 #kneeR #kneeY
	touchUp 0
	sleep 28
	#hitCount = #hitCount + 1
endif

if #shoulders == 1
	touchDown 0 #armL #shoulderY
	touchUp 0
	sleep 28
	#hitCount = #hitCount + 1
	touchDown 0 #armR #shoulderY
	touchUp 0
	sleep 28
	#hitCount = #hitCount + 1
endif

if #hands == 1
	touchDown 0 #armL #handY
	touchUp 0
	sleep 28
	#hitCount = #hitCount + 1
	touchDown 0 #armR #handY
	touchUp 0
	sleep 28
	#hitCount = #hitCount + 1
endif

if #head == 1
	touchDown 0 #bodyX #headY
	touchUp 0
	sleep 28
	#hitCount = #hitCount + 1
endif

if #torso == 1
	touchDown 0 #bodyX #torsoY
	touchUp 0
	sleep 28
	#hitCount = #hitCount + 1
endif

if #hitCount < #hitTotal
	goto :start
endif
